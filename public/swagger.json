		"schemas": {
			"EUserRole": {
				"enum": [
					"parent",
					"student",
					"teacher",
					"admin",
					"super_admin"
				],
				"type": "string"
			},
			"SignUpDto": {
				"properties": {
					"role": {
						"$ref": "#/components/schemas/EUserRole"
					},
					"password": {
