					"email",
					"lastName",
					"firstName"
				],
				"type": "object"
			},
			"LoginDto": {
				"properties": {
					"password": {
						"type": "string"
					},
					"email": {
						"type": "string"
					}
				},
				"required": [
					"password",
					"email"
				],
				"type": "object"
			}
		},
		"securitySchemes": {
